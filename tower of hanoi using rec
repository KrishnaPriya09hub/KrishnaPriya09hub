#include <stdio.h>

// Function to move n disks from source to destination using auxiliary rod
void towerOfHanoi(int n, char source, char destination, char auxiliary) {
    // Base case: 1 disk to move
    if (n == 1) {
        printf("Move disk 1 from rod %c to rod %c\n", source, destination);
        return;
    }

    // Move n-1 disks from source to auxiliary, so they are out of the way
    towerOfHanoi(n - 1, source, auxiliary, destination);

    // Move the nth disk from source to destination
    printf("Move disk %d from rod %c to rod %c\n", n, source, destination);

    // Move the n-1 disks that we left on auxiliary to destination
    towerOfHanoi(n - 1, auxiliary, destination, source);
}

// Driver program
int main() {
    int n = 3;  // Number of disks

    // Rods A, B, and C
    char source = 'A';
    char destination = 'C';
    char auxiliary = 'B';

    printf("Tower of Hanoi for %d disks:\n", n);
    towerOfHanoi(n, source, destination, auxiliary);

    return 0;
}
