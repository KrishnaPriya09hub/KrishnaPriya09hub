
#include 

int main() {
    int sum = 0;

    for (int i = 2; i <= 100; i += 2) {
        sum += i;
    }

    printf("Sum of even numbers between 1 and 100 = %d\n", sum);

    return 0;
}



//Alternatively, using formula:



#include 

int main() {
    int n = 50;  // Number of even numbers between 1 and 100
    int sum = (n * (n * 2 + 2)) / 2;

    printf("Sum of even numbers between 1 and 100 = %d\n", sum);

    return 0;
}
