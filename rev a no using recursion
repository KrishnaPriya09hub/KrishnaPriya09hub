#include <stdio.h>

int reverse(int n, int rev = 0) {
    if (n == 0)
        return rev;
    else {
        rev = rev * 10 + n % 10;
        return reverse(n / 10, rev);
    }
}

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);
    printf("Reversed number: %d\n", reverse(num));
    return 0;
}
