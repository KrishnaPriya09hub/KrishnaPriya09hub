#include <stdio.h>

// Define a union
union Data {
    int i;
    float f;
    char str[20];
};

int main() {
    // Declare a variable of type union Data
    union Data data;

    // Assign an integer value to the union
    data.i = 10;
    printf("Integer value: %d\n", data.i);

    // Assign a floating-point value to the union
    data.f = 20.5;
    printf("Floating-point value: %f\n", data.f);

    // Assign a string value to the union
    strcpy(data.str, "Hello, World!");
    printf("String value: %s\n", data.str);

    return 0;
}
