#include<stdio.h>

int determinant(int a[10][10], int n) {
    int i, j, k, det = 1;
    for (i = 0; i < n; i++) {
        for (j = 1; j < n; j++) {
            if (a[j][i] != 0) {
                int ratio = a[j][i] / a[0][i];
                for (k = 0; k < n; k++) {
                    a[j][k] -= ratio * a[0][k];
                }
            }
        }
    }
    for (i = 0; i < n; i++)
        det *= a[i][i];
    return det;
}

int main() {
    int a[10][10], n;
    printf("Enter the order of the matrix: ");
    scanf("%d", &n);
    printf("Enter the matrix elements:\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &a[i][j]);
    printf("Determinant of the matrix: %d\n", determinant(a, n));
    return 0;
}
