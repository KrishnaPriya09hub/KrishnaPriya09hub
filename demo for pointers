#include <stdio.h>

int main() {
    int var = 20; // Declare an integer variable
    int *ptr; // Declare a pointer to an integer

    ptr = &var; // Assign the address of var to ptr

    printf("Value of var: %d\n", var);
    printf("Address of var: %p\n", &var);
    printf("Value of ptr: %p\n", ptr);
    printf("Value at address ptr: %d\n", *ptr);

    *ptr = 30; // Change the value of var through ptr

    printf("Value of var after change: %d\n", var);

    return 0;
}
